<% include partials/header %>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

<h1>Welcome to menu page!</h1>
<h1>Let's order something you like!</h1>

    <div class="row">
        <% items.forEach(function(item) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <div style="height: 200px">
                        <img style="width:100%; height: 100%;" src="<%= item.image %>"> 
                    </div>
                    <div class="caption">
                        <h4><%= item.name %></h4>
                        <h4>$<%= item.price %></h4>
                        <p><a class="btn btn-primary btn-sm" href="/item/<%= item._id %>">Check</a></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
 
    
    <a class="btn btn-outline-info" href="/viewcart">
        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
        Check my Cart
    </a>


    <script src="../test.js"></script>
<% include partials/footer %>
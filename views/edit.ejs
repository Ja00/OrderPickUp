<h1>You are editing <%= item.name %></h1>

<form action="/item/<%=item._id %>?_method=PUT" method="POST">
    <input type="text" name="item[name]" value="<%= item.name %>">
    <input type="text" name="item[price]" value="<%= item.price %>">
    <input type="text" name="item[image]" value="<%= item.image %>">
    <input type="text" name="item[description]" value="<%= item.description %>">
    <input type="number" name="item[time]" value="<%= item.time %>">
    <button>Submit</button>
</form>